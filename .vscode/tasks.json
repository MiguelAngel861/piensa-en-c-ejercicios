{
        "version": "2.0.0",
        "tasks": [
                {
                        "type": "cppbuild",
                        "label": "C/C++: clang compilar archivo activo",
                        "command": "/usr/bin/clang",
                        "args": [
                                "-fcolor-diagnostics",
                                "-fansi-escape-codes",
                                "-Wall",
                                "-g",
                                "${file}",
                                "-o",
                                "${fileDirname}/${fileBasenameNoExtension}",
                                "-lm"
                        ],
                        "options": {
                                "cwd": "${fileDirname}"
                        },
                        "problemMatcher": [
                                "$gcc"
                        ],
                        "group": "build",
                        "detail": "compilador: /usr/bin/clang"
                },
        ]
}