{
        "version": "2.0.0",
        "tasks": [
                {
                        "type": "cppbuild",
                        "label": "C/C++: gcc compilar archivo activo",
                        "command": "/usr/bin/gcc-14",
                        "args": [
                                "-std=c99",
                                "-Wall",
                                "-Wextra",
                                "-Wmain",
                                "-fdiagnostics-color=always",
                                "-g",
                                "${file}",
                                "-o",
                                "${fileDirname}/${fileBasenameNoExtension}"
